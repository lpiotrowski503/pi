{
  "name": "raspberry",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "watch": {
    "run-cp": {
      "patterns": [
        "*"
      ],
      "extensions": "ts, html, css, sass, js, json",
      "runOnChangeOnly": true
    },
    "run-docker": {
      "patterns": [
        "*"
      ],
      "extensions": "ts, html, css, sass, js, json",
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "start": "nodemon ./app/dist/app.js",
    "dev": "run-p tsc-w node-w",
    "dev-pi": "npm-watch run-docker",
    "cp": "run-p tsc-w pi",
    "pi": "npm-watch run-cp",
    "run-cp": "run-cp.sh",
    "run-cp-all": "run-cp-all.sh",
    "run-docker": "docker build -t raspi . && docker stop johnny && docker rm johnny && docker container run --device /dev/gpiomem -v /sys:/sys --device /dev/ttyAMA0:/dev/ttyAMA0 --device /dev/mem:/dev/mem --privileged --restart always -p 3000:3000 --name johnny raspi",
    "node-w": "nodemon ./app/dist/app.js",
    "tsc-w": "tsc -w",
    "raspi": "npm i raspi-io",
    "ssh": "ssh-pi.sh"
  },
  "author": "≈Åukasz Piotrowski",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "johnny-five": "1.0.0",
    "nedb": "^1.8.0",
    "noble": "^1.9.1",
    "pi-io": "^1.0.0",
    "raspi-io": "10.0.2",
    "socket.io": "^1.0.0",
    "wpi-stepper": "^0.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/johnny-five": "0.0.40",
    "@types/nedb": "^1.8.9",
    "console-remote-client": "^0.5.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.3",
    "npm-watch": "^0.6.0",
    "typescript": "^3.6.4"
  }
}
